@startuml

!unquoted procedure SALT($x)
"{{
salt
%invoke_procedure("_"+$x)
}}" as $x
!endprocedure

!procedure _choose()
{+
    <b>an example
    choose one option
    ()one
    ()two
    [ok]
}
!endprocedure

!procedure _wait()
{+
    <b>please wait
    operation in progress
    <&clock>
    [cancel]
}
!endprocedure

!procedure _success()
{+
    <b>success
    congratulations!
    [ok]
}
!endprocedure

!procedure _error()
{+
    <b>error
    failed, sorry
    [ok]
}
!endprocedure

(*) --> SALT(choose)
-right-> SALT(wait)
wait -right-> SALT(success)
wait -down-> SALT(error)

@enduml
